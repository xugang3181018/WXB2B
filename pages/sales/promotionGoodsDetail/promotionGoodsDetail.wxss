@import '/vendor/wxParse/wxParse.wxss';

.commodity-banner-wrapper {
  position: relative;
  overflow: hidden;
  background: rgba(224, 209, 212, 1);
}

.commodity-banner {
  height: 500rpx;
  position: relative;
}

.commodity-banner-swiper {
  height: 500rpx;
}

.commodity-banner swiper-item {
  height: 500rpx;
}

.commodity-banner image {
  width: 100%;
  height: 500rpx;
}

.commodity-banner-number {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 90px;
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
  padding: 6rpx 20rpx;
}

.commodity-center {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
}

.commodity-base-info {
  padding: 30rpx 0;
}

.line,
.border,
.list-item,
line-top,
.arr {
  position: relative;
}

.line::before,
.list-item::before {
  border-bottom: 1px solid #eee;
}

.line::before,
.border::before,
.line-top::before,
.page-bar::after,
.list-item::before {
  content: '';
  position: absolute;
  height: 1px;
  transform: scale(0.5);
  left: -50%;
  right: -50%;
  bottom: -1px;
  display: block;
}

.commodity-center {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
}


.commodity-name {
  font-size: 32rpx;
  margin-bottom: 15rpx;
  font-weight: 600;

}

.commodity-sellingPoint {
  margin-bottom: 25rpx;
  font-size: 24rpx;
  color: #969292;
}

.commodity-info {
  width: 100%;

}

.buttonStyle {
  display: flex;
  font-size: 28rpx;
  /* justify-content: space-between; */
  align-items: flex-end;

}

.catetag {
  font-size: 20rpx;
  text-align: center;
  border-radius: 6rpx;
  background: #f33;
  color: #fff;
  padding: 3rpx 10rpx;
  margin-left: 30rpx;
}

.commodity-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  color: #9b9b9b;

}

.commodity-title::after,
.commodity-title::before {
  width: 100rpx;
  height: 1px;
  background: #444;
  margin: 0 20rpx;
  opacity: .1;
  content: '';

}


.expect-Price {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  align-items: center;
  color: #f33;
}

.stocks {
  color: #7f7f7f;
  margin-left: 30rpx;
}

.end{
  height: 200rpx;
}

.goods-ext {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 0;
  height: 84rpx;
  background-color: #00bb9c;
  color: #fff;
  text-align: center;
  width: 750rpx;
}

.promot-list{
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.haibao,.getUser {
  font-size: 26rpx;
  width: 45%;
  height: 150rpx;
  text-align: center;
  padding-top: 35rpx;
}

.haibao image, .getUser image {
  width: 80rpx;
  height: 80rpx;
}

.to-post{
  height: 100rpx;
  margin: 0;
  line-height: 100rpx;
}