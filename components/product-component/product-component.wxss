.product-component .popup {
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.product-component .popup .product {
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 326rpx;
  height: 76rpx;
  border-radius: 8rpx;
  border: 2rpx solid #E5E5E5;
  text-align: center;
  line-height: 80rpx;
}
.product-component .popup .isSelect {
  background: #5177BE;
  border-color: #5177BE;
  color: #fff;
}
.product-component .modal-content .title {
  margin-bottom: 30rpx;
  display: block;
}
.product-component .modal-content .product-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.product-component .modal-content .product-list .item {
  margin: 10rpx 20rpx 10rpx 0;
}
.product-component .modal-content .activated, .modal-content .notActive {
  margin-bottom: 50rpx;
}
.product-component .modal-content .activated .title {
  color: #51E50F
}
.product-component .modal-content .notActive .title {
  color: #FF4430
}
.product-component .modal-content .activationCode {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 50rpx;
}
.product-component .modal-content .activationCode .input-class {
  border: 2rpx solid #ccc;
  font-size: 25rpx;
  flex-grow: 1;
  padding-left: 10rpx;
  border-radius: 3rpx;
  text-align: left;
}
.product-component .modal-content .active {
  color: #fff;
  font-size: 30rpx 0;
  padding: 20rpx 0;
  background: #5177BE;
  border-radius: 6rpx;
  text-align: center;
}