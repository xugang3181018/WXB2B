page {
  background-color: #fff !important;
}

.productSort .header {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 9;
  /* border-bottom: 1rpx solid #f5f5f5; */
  border-top: 1rpx solid #f5f5f5;
}

.productSort .header .input {
  width: 90%;
  height: 60rpx;
  background-color: #F7F7F7;
  border-radius: 60rpx;
  box-sizing: border-box;
  padding:0 20rpx;
  position: relative;
}

.productSort .header  .scan-img{
  width:40rpx;
  height:40rpx;
  position:absolute;
  right:30rpx;
  z-index:99999;
}

.productSort .header .input .iconfont {
  font-size:26rpx;
  color: #B2B2B2;
}


.productSort .header .input input {
  font-size: 26rpx;
  height: 100%;
  width:94%;
}

.productSort .aside {
  position: fixed;
  width: 180rpx;
  left: 0;
  bottom: 0;
  background-color: #f7f7f7;
  overflow-y: auto;
  overflow-x: hidden;
}

.productSort .aside .item {
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 20rpx;
  width: 100%;
  font-size: 24rpx;
  color: #333;
}

.productSort .aside .two-item {
  text-indent: 35rpx;
  background: #fff;
  color: #999;
}

.productSort .aside .three-item {
  text-indent: 40rpx;
  /* background:#e4e2e2; */
}

.productSort .aside .four-item {
  text-indent: 55rpx;
  /* background:#dbdada; */
}

.arrows {
  position: relative;
}

.arrows::after {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-top: 4rpx solid rgba(82, 76, 76, 0.4);
  border-right: 4rpx solid rgba(82, 76, 76, 0.4);
  transform: rotate(45deg);
  position: absolute;
  right: 20rpx;
  top: 35rpx;
}

.arrows-bottom::after {
  transform: rotate(135deg);
}

.productSort .aside .item.on {
  background-color: #fff;
  /* border-left: 2rpx solid #fc4141; */
  width: 100%;
  text-align: center;
  /* color: #fc4141; */
  font-weight: bold;
}

.productSort .aside .item .font-color {
  color: #B19361;
  font-weight: 600;
}


