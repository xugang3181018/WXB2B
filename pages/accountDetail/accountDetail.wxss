/* pages/accountDetail/accountDetail.wxss */

.detail-box{
  width:100vw;
  height:100vh;
  background:#eee;
  font-size:28rpx;
}
.userBox{
  width:100%;
  height:150rpx;
  background:#fff;
  color:#000;
}
.userBox>view{
  padding:25rpx 20rpx;
}
.userBox>view:last-of-type{
  padding-top:0;
}
.detail{
  background:#fff;
  margin-top:24rpx;
  color: #020202;
}
.detail>view{
  display:flex;
  height:90rpx;
  align-items: center;
  justify-content: space-between;
  padding:0 20rpx;
  border-bottom:1px solid #eee;
}
.detail-name{
  color:rgba(2,2,2,0.55)
}
.defaultColor{
  color:#FF9800;
}
.color1{
  color:#01BB9C;
}

.color2{
  color:#E51C23;
}
.detail .failed{
  height:150rpx;
  display: flex;
  flex-direction:column;
  align-items: flex-start;
  justify-content: flex-start;
  line-height:60rpx;
}

.failed-cause{
  font-size:24rpx;
  color:#E51C23;
}
