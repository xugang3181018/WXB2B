page {
  background: #f7f7f7;
}
.bankAccess .tab {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px solid #E5E5E5;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.bankAccess .tab view {
  box-sizing: border-box;
  width: 165rpx;
  height: 60rpx;
  background: #fff;
  border: 1rpx solid #5177BE;
  text-align: center;
  line-height: 58rpx;
  color: #5177BE;
  font-size: 30rpx;
}
.bankAccess .tab view:first-of-type {
  border-right: 0;
}
.bankAccess .tab .isChecked {
  color: #fff;
  background: #5177BE;
}
.bankAccess .main {
  width: 100%;
}
.bankAccess .itemsList {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  position: relative;
}
.bankAccess .itemsList > view {
  margin: 0 30rpx;
  padding: 29rpx 0 38rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  border-bottom: 1rpx solid #E5E5E5;
}
.bankAccess .itemsList > view view {
  color: #888;
  font-size: 24rpx;
  line-height: 43rpx;
}
.bankAccess .itemsList > view .name {
  font-size: 32rpx;
  color: #333;
  line-height: 42rpx;
  max-width: 400rpx;
  margin-bottom: 10rpx;
}
.bankAccess .itemsList > view .errMsg {
  display: flex;
  align-items: center;
  margin-top: 37rpx;
}
.bankAccess .itemsList > view .errMsg text {
  color: #FF4430;
  line-height: 33rpx;
}
.bankAccess .itemsList > view .errMsg image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 11rpx;
}
.bankAccess .itemsList > view .arr {
  width: 35rpx;
  height: 35rpx;
}
.bankAccess .itemsList > view .aduitStatus {
  padding: 0 10rpx;
  height: 39rpx;
  text-align: center;
  line-height: 39rpx;
  color: #fff;
  background: #4d4c4c;
  font-size: 24rpx;
  position: absolute;
  right: 11rpx;
  top: 37rpx;
}
.bankAccess .itemsList > view .aduitSuccess {
  color: #fff;
  background: #5177BE;
}
