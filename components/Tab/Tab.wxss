/* components/Tab/Tab.wxss */
.tab {
    background: #fff;
    text-align: center;
    padding: 0 0;
    height:40px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.tab-item {
    display: inline-block;
    padding: 0 30rpx;
    border: 1px solid #00cc99;
    margin-left: -1px;
    font-size: 28rpx;
    color: #00cc99;
    line-height: 52rpx;
}

.tab-item:first-child {
    border-radius: 4rpx 0 0 4rpx;
}

.tab-item:last-child {
    border-radius: 0 4rpx 4rpx 0;
}

.tab-item.active {
    background: #00cc99;
    color: #fff;
}
