<wxs src="../../utils/app.wxs" module="tool" ></wxs>

<view class="f-c-sb order-merchant">
  <view class="merchant-logo ico-logo" />
  <view class="merchant-content">
    <view class="merchant-name">{{merchantName}}</view>
    <view>订单号：{{orderNo}}</view>
  </view>
</view>

<view class="order-block">
  <view wx:for="{{goodsList}}" class="f-c-sb goods-item">
      <image class="goods-img" src="{{item.goodsImgUrl}}" />
      <view class="goods-item-content">
        <view class="goods-name">{{item.goodsName}}</view>
        <view class="goosd-item-price f-c-sb"> 
          <view class="price">{{item.goodsSellPrice}} </view>
          <view> ×{{item.goodsQuantity}}</view>
        </view>
      </view>
  </view>
</view>

<view class="order-block">
    <view class="order-item">
      <view class="attr"> {{payStatus==0?'应付金额':'实付金额'}}</view>
      <view class="value">¥{{ tool.fixedPrice(payAmount) }}</view>
    </view>
</view>

<view class="order-block">
  <view class="order-item line">
    <view class="attr">支付方式</view>
    <view class="value">{{status.payType[payType]}}</view>
  </view>
  <view class="order-item">
    <view class="attr">下单时间</view>
    <view class="value">{{createTime }}</view>
  </view>
</view>

<page-bar wx:if="{{orderStatus === 0 && payStatus===0}}">
  <view class="f-c-sb order-bar">
    <button class="button-service" size="mini"  open-type="contact" >
      <view class="ico ico-service" />
      <text>联系客服</text>
    </button>
    <view class="button-flex">
    <view class="button-middle" bindtap="{{buttonLoading ? '' : 'payOrder'}}">
      立即支付({{payAmount}})
    </view>
  </view>
  </view>
</page-bar>