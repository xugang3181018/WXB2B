page {
  height: 100%;
  background-color: #f4f4f4;
}
.business-hours {
  padding-top: 80rpx;
}
.business-hours view {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.business-hours image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 16rpx;
}
.business-hours .header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: #fff;
}
.business-hours .header image {
  width: 32rpx;
  height: 32rpx;
}
.business-hours .header text {
  line-height: 60rpx;
  color: red;
}
.business-hours .list-item {
  width: 100%;
  height: 240rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  flex-direction: column;
}
.business-hours .list-item .item-info {
  justify-content: space-between;
  height: 168rpx;
  width: 100%;
  border-bottom: 2rpx dashed #DDD;
}
.business-hours .list-item .date-info {
  flex-direction: column;
  align-items: flex-start;
  margin-left: 60rpx;
}
.business-hours .list-item .date-info .time {
  font-size: 44rpx;
  margin-bottom: 10rpx;
}
.business-hours .list-item .date-info .date {
  color: #999999;
}
.business-hours .list-item .operations {
  height: 70rpx;
  width: 100%;
}
.business-hours .list-item .operations view {
  height: 100%;
}
.business-hours .list-item .operations > view {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.business-hours .list-item .operations > view view {
  padding: 0 30rpx;
}
.business-hours .add-business-hours {
  margin: 0 20rpx;
  background-color: #fff;
  height: 160rpx;
}
.business-hours button {
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
}
.popup view {
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup .time {
  flex-direction: column;
}
.popup .time .time-title {
  background: #fff;
  height: 80rpx;
  width: 100%;
  padding-left: 150rpx;
  border-bottom: 2rpx solid #EDEDED;
}
.popup .time .time-title view {
  width: 50%;
  justify-content: flex-start;
}
.popup .time .time-picker {
  border-bottom: 2rpx solid #EDEDED;
}
.popup .time .border {
  width: 2rpx;
  height: 300rpx;
  background-color: #EDEDED;
}
.popup .week {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.popup .week .title {
  margin: 20rpx 0 40rpx 46rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.popup .week .options {
  display: flex;
  justify-content: space-between;
  width: 660rpx;
  padding: 0 46rpx 30rpx 44rpx;
}
.popup .week .options .week-checked {
  color: #fff;
  background-color: #5177BE;
  border-color: #5177BE;
}
.popup .week .options view {
  width: 200rpx;
  line-height: 68rpx;
  border: 2rpx solid #EDEDED;
  border-radius: 6px;
  font-size: 24rpx;
  color: #666666;
}
.popup checkbox-group {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 46rpx 20rpx;
}
.popup .checkbox {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
}
.popup checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #5177BE;
}
.popup checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
}
.popup .week .customDate {
  line-height: 68rpx;
  border: 2rpx solid #EDEDED;
  border-radius: 6px;
  margin: 0 46rpx 48rpx 44rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #666666;
}
.popup .operation {
  color: #fff;
  background-color: #5177BE;
  height: 100rpx;
  width: 100%;
}