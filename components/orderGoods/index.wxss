@import '/app.wxss';

.orderGoods {
  background-color: #fff;
  margin-top: 20rpx;
}

.orderGoods .total {
  width: 100%;
  height: 78rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #EEE;
  font-size: 28rpx;
  color: #333;
  line-height: 78rpx;
}

.orderGoods .orderInfo {
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 1px solid #eee;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333;
}

.orderGoods .orderInfo text:nth-child(2) {
  margin-left: 20rpx;
}

.goods-content-box {
  padding-top: 10rpx;
  width: 100%;
  margin-left: -30rpx;
  height: 80rpx;
  display: flex;
  background: #fff;
  justify-content: space-around;
  /* border-bottom:1px solid #f0f0f0; */
}

.input-box {
  display: flex;
  font-size: 26rpx;
  color: #868686;
}

