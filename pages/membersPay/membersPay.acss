  border-radius: 6px;
}
.payTitle{
  width:100%;
  height:80px;
}
.head_portrait_f{
  width:100%;
  margin:auto;
}
.head_portrait{
  width:60px;
  height:60px;
  margin:0 auto;
}
.head_portrait_img{
  width:100%;
  height:100%;
  border-radius: 50%;
}

.head_portrait_f text{
  display:block;
  text-align:center;
  margin:12px 0 6px;;
}

.member_grade{
  width:80px;
  background:#000;
  border-radius: 4px;
  margin:0 auto 40px;
}

.member_grade text{
  text-align: center;
  color:#fff;
  line-height:26px;
}

.member_details_f{
  /* margin-top:40px; */
