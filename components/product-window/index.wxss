@import '/app.wxss';

.product-window {
  position: fixed;
  bottom:0;
  width: 100%;
  left: 0;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding-bottom:20rpx;
  transform: translate3d(0, 100%, 0);
  transition: all 0.3s cubic-bezier(0.25, 0.5, 0.5, 0.9);
  z-index:999999;
}

.product-window.on {
  transform: translate3d(0, 0, 0);
}

.product-window.join {
  padding-bottom: 30rpx;
}

.head {
  height: 100rpx;
  border-bottom: 1px solid #EFEFEF;
  position: relative;
}

.head .head-title {
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  font-size: 30rpx;
}

.product-window .head .iconfont {
  position: absolute;
  right: 44rpx;
  top: 32rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #8a8a8a;
}

.product-window .textpic {
  padding: 43rpx 0 40rpx 34rpx;
  position: relative;
}

.product-window .textpic .pictrue {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
}

.product-window .textpic .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.product-window .textpic .text {
  width: 410rpx;
}

.product-window .textpic .text .line1 {
  /* margin-top:20rpx; */
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
}

.product-window .textpic .text .name {
  font-size: 20rpx;
  color: #999999;
  margin-top: 8rpx;
  margin-bottom: 20rpx;
}

.product-window .textpic .text .money {
  font-size: 24rpx;
  color: #EB5533;
}

.product-window .textpic .text .money .num {
  font-size: 28rpx;
}

.product-window .textpic .text .money .unit {
  font-size: 16rpx;
  color: #999999;
}

.product-window .textpic .text .money .stock {
  color: #999;
  margin-left: 18rpx;
}

.product-window .productWinList {
  max-height: 395rpx;
  padding-left: 34rpx;
  overflow: auto;
}

.product-window .productWinList .item~.item {
  margin-top: 36rpx;
}

.product-window .productWinList .item .title {
  font-size: 28rpx;
  color: #333333;
}

.product-window .productWinList .item .listn {
  padding-top: 20rpx;
  display: inline-block;
}

.product-window .productWinList .item .listn .itemn {
  border: 1px dashed #B19361;
  border-radius: 4rpx;
  font-size: 26rpx;
  color: #B19361;
  /* padding: 7rpx 33rpx; */
  margin-right: 20rpx;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.product-window .productWinList .item .listn .itemn.on {
  color: #fff;
  background-color: #B19361;
}

.product-window .cart {
  margin-top: 30rpx;
  padding: 0 34rpx;
}

.product-window .cart .title {
  font-size: 28rpx;
  color: #333333;
}

.product-window .cart .carnum {
  height:60rpx;
  margin-top: 20rpx;
}

.product-window .cart .carnum view {
  border: 1px solid #E0E0E0;
  width:100rpx;
  text-align: center;
  height: 100%;
  line-height:60rpx;
  color: #8B8B8B;
  font-size: 45rpx;
}

.product-window .cart .carnum .reduce {
  width:60rpx;
  height:60rpx;
  border-right: 0;
  border-radius: 6rpx 0 0 6rpx;
  line-height: 48rpx;
  color:  #8B8B8B;
}

.product-window .cart .carnum .reduce.on {
  border-color: #e3e3e3;
  color: #dedede;
}

.product-window .cart .carnum .plus {
  width:60rpx;
  height:60rpx;
  border-left: 0;
  border-radius: 0 6rpx 6rpx 0;
  line-height:48rpx;
  color:  #8B8B8B;
}

.product-window .cart .carnum .plus.on {
  border-color: #e3e3e3;
  color:  #8B8B8B;
}

.product-window .cart .carnum .num {
  color: #282828;
  font-size: 28rpx;
}

.product-window .joinBnt {
  font-size: 30rpx;
  width: 620rpx;
  height: 86rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 86rpx;
  color: #fff;
  margin: 21rpx auto 0 auto;
}

.product-window .joinBnt.on {
  background-color: #bbb;
  color: #fff;
}


.addCart {
  margin:80rpx 34rpx 0;
  height: 90rpx;
  color: #fff;
  font-size:30rpx;
  background: #B19361;
