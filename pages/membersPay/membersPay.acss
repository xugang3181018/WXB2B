}

.member_details{
  display:inline-block;
  width:33%;
  font-size:22px;
  color:#000;
  text-align:center;
}

.member_details text:nth-child(1){
  display:block;
  line-height:40px;        
}

.pay_money{
  margin:40px 12%;
  height:60px;
  overflow: hidden;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc
}

.pay_money .text1{
  float: right;
  font-size:32px;
  color:#000;
}

.pay_money text{
  line-height:60px;
  margin:0 10px;
}

