/* pages/goodsPay/goodsPayList/goodsPayList.wxss */
@import "../../../iconfont.wxss";

.goods-pay-list-box {
  height: 100%;
  padding: 0 30rpx;
  /* background: #fff; */
}

.shop-title {
  height: 106rpx;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #101010;
  border-bottom: 1px solid#EDF1F2;
}

.goods-name {
  width: 400rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  word-wrap: break-word;
}

.iconfont {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 10rpx;
  margin-top: 4rpx;
}

.deleteicon {
  font-size: 40rpx;
  color: #101010;
  position: absolute;
  right: 40rpx;
  top: 30rpx;
}

.dianpu-icon{
  font-size:60rpx;
  margin-right: 10rpx;
  color:#00bb9c;
}

/* .dianpubao-img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
} */

.redact-img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.empty-img-box {
  height: 650rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #c3c3c9;
}

.empty-img {
  width: 274rpx;
  height: 274rpx;
  margin-bottom: 60rpx;
}

.btn-box {
  background: #fff;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.btn-box .btn {
  width: 100vw;
  height: 130rpx;
  box-sizing: border-box;
  background: #f9f9fb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.number-btn {
  width: 240rpx;
  height: 90rpx;
  border: 1px solid #edf1f2;
  border-radius: 8rpx;
  color: #00bb9c;
  line-height: 90rpx;
  text-align: center;
}

.scan-btn {
  width: 360rpx;
  height: 90rpx;
  background: #00bb9c;
  color: #fff;
  display:flex;
  justify-content: center;
  align-items: center;
  line-height: 90rpx;
  border-radius: 8rpx;
}

.saoma-icon{
  font-size:50rpx;
  color:#fff;
  margin-top:12rpx;
  /* margin-right:6rpx; */
}

/* .saoma-img {
  width: 48rpx;
