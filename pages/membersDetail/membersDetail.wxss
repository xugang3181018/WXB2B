.head {
    display: flex;
    padding: 60rpx 40rpx;
    background: #00cc99;
}

.head-info {
    font-size: 28rpx;
    color: #444;
    flex: 1;
}

.head image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 90px;
    margin-right: 30rpx;
}

.head-name {
    font-size: 40rpx;
    color: #fff;
}

.head-name text {
    font-size: 24rpx;
}

.head-level {
    display: flex;
    align-items: center;
    padding: 4rpx 0;
    border: 1rpx solid rgba(255, 255, 255, 0.8);
    background: #fff;
    color: #00cc99;
    justify-content: center;
    width: 170rpx;
    border-radius: 90px;
    margin-top: 17rpx;
    font-size: 24rpx;
}

.head-level .ico {
    margin-right: 8rpx;
    font-size: 34rpx;
}

.member-col {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 40rpx;
    text-align: center;
    background: #00cc99;
    color: #fff;
    flex-wrap: wrap;
}

.member-col>view {
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    width: 20%;
}

.member-col .value {
    font-size: 34rpx;
    color: #fff;
    margin-top: 10rpx;
}

.button-bar {
    margin: 0 40rpx;
}
