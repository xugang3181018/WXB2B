.post{
  position: fixed;
  left:0;
  right:0;
  bottom: 0;
  top:0;
  background: rgba(0, 0, 0, .8);
	z-index: 100;
	display: flex;
	align-items: center;
	justify-content: center;
}
.widget{
	opacity: 0;
	position: absolute;
	left: -2000px;
	top:0;
}
.post-img{
	box-shadow: 0 3px 30px rgba(0, 0, 0, .2);
	border-radius:10rpx;
	overflow:hidden;
}

.post-img image {
	width: 100%;
	height: 100%;
}

.bar{
	width:300px;
}
.posts{
	overflow: hidden;
}