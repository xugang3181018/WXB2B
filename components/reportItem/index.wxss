.detail{
  position: relative;
}
.detail:after {
  content: '';
  display: block;
  left: -50%;
  right: -50%;
  bottom: 0;
  position: absolute;
  border-bottom: 1px solid #eee;
  height: 1px;
  transform: scale(0.5);
  z-index: 2;
}

.getmore {
  font-size: 26rpx;
  text-align: center;
  line-height: 2;
  padding: 40rpx 0;
}

.shop-item {
  display: flex;
  /* align-items: center; */
  background: #fff;
  padding: 20rpx 30rpx;
  position: relative;
}

.item-arr {
  position: absolute;
  right: 0;
  top: 0;
  width: 50rpx;
  bottom: 0;
  display: flex;
  align-items: center;
}

.item-arr:after {
  content: '';
  display: block;
  width: 14rpx;
  height: 14rpx;
  border: 2px solid #ddd;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
  transition: .3s;
}

.dopen {
  background: #fff;
}

.dopen .item-arr:after {
  transform: rotate(135deg);
}

.dopen .shop-item {
  background: transparent;
}

.shop-item:last-child::before {
  border: none;
}

.dopen .shop-item .s-item {
  display: none;
}

.dopen .shop-item .s-name {
  font-weight: 700;
  font-size: 32rpx;
  color: #444;
  width: 100%;
  display: block;
}

.s-item {
  font-size: 24rpx;
  padding: 14rpx 20rpx;
}

.s-name {
  font-size: 28rpx;
  width: 40%;
  color: #444;
  font-weight: 800;
  padding-right: 20rpx;
  padding: 10rpx 0;
}

.s-title {
  color: #888;
  margin-bottom: 10rpx;
}

.s-num {
  color: #444;
  font-weight: 800;
  font-size: 30rpx;
}

.r-detail {
  background-color: #fff;
  padding: 0 20rpx 20rpx;
}

.r-detail .s-item {
  width: 33%;
  display: inline-block;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  border: none;
  vertical-align: top;
}

.detail>view:last-child::before {
  border: none;
}

.lline {
  position: relative;
}
.lline::before {
  content: '';
  display: block;
  left: 0;
  width:1px;
  bottom: 0;
  position: absolute;
  border-left: 1px solid #888;
  height: 100%;
  transform: scale(0.5);
  z-index: 2;
}

.r-detail .lline:nth-child(3n-2)::before {
  border:none;
}