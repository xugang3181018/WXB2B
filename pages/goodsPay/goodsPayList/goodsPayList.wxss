.account-box {
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.account-money-box {
  font-size: 32rpx;
  color: #101010;
}

.account-money-box .account-money {
  color: #ff9502;
  font-weight: 600;
}

.account-box .account-btn {
  width: 210rpx;
  height: 86rpx;
  background: #54cfaa;
  border-radius: 86rpx;
  color: #fff;
  text-align: center;
  line-height: 86rpx;
}

.goods-list-content {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #edf1f2;
}

.goods-title {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.carnum {
  height: 54rpx;
}

.carnum view {
  border: 1px solid #a4a4a4;
  width: 84rpx;
  text-align: center;
  height: 100%;
  line-height: 54rpx;
  color: #a4a4a4;
  font-size: 45rpx;
}

.acea-row {
  display: flex;
  flex-wrap: wrap;
}

.acea-row.row-middle {
  align-items: center;
}

.carnum .reduce {
  border-right: 0;
  border-radius: 6rpx 0 0 6rpx;
  line-height: 48rpx;
}

.carnum .reduce.on {
  border-color: #e3e3e3;
  color: #dedede;
}

.carnum .num {
  color: #282828;
  font-size: 28rpx;
}

.carnum .plus {
  border-left: 0;
  border-radius: 0 6rpx 6rpx 0;
  line-height: 46rpx;
}

.carnum .plus.on {
  border-color: #e3e3e3;
  color: #dedede;
}

.goods-price {
  height: 106rpx;
  display: flex;
  align-items: center;
  background: #fbfbfb;
  border: 1px solid #f7f7f7;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.unit-price {
  width: 160rpx;
  margin-left: 30rpx;
  color: #101010;
}

.total-price {
  flex: 1;
  text-align: right;
  margin-right: 30rpx;
  color: #ff9502;
}

.pay-way-box {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.2);
  position: fixed;
  top: 0;
  z-index: 10;
}

.pay-way {
  width: 100%;
  height: 400rpx;
  position: absolute;
  background: #fff;
  bottom: 0;
}

.pay-way-title {
  font-size: 36rpx;
  color: #101010;
  text-align: center;
  margin-top: 60rpx;
}

.pay-way-btn {
  margin-top: 100rpx;
  display: flex;
  justify-content: space-around;
}

.pay-btn {
  width: 300rpx;
  height: 100rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.cash-pay-btn {
  background: #ff9502;
}

.scan-pay-btn {
  background: #00bb9c;
}
