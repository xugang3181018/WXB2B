.head{
	background:  #00cc99;
	padding:30rpx;
	color:#fff;
	padding-bottom:90rpx;
}
.head-img{
	width: 80rpx;
	height:80rpx;
	border-radius:90px;
	margin-right:20rpx;
}
.tags{
	font-size:24rpx;
}
.col{
	display: flex;
	background: #fff;
	margin: 0 30rpx;
	margin-top:-60rpx;
	align-items: center;
	height:120rpx;
	border-radius:10rpx;
}
.col>view{
	flex:1;
	text-align:center;
	font-size:24rpx;
	color: #999;
  height:120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.col>view text{
	font-size:36rpx;
	font-weight: 600;
	display: block;
	margin-top:10rpx;
	color:#00cc99;
}
.arr{
  font-weight:normal;
}
.tags-list{
  padding: 30rpx;
  flex-wrap: wrap;
}
.tags{
	font-size:24rpx;
	padding:6rpx 20rpx;
	margin:0 20rpx 15rpx 0;
	background: #00cc99;
	color:#fff;
	border-radius:90px;
}
.page-bar-inner{
  display: flex;
  align-items: center;
  justify-content: center;
  height:50px;
}
.page-bar-inner .button{
  width:180rpx;
  margin:0 10rpx;
  height:60rpx;
  line-height:60rpx;
  box-sizing: border-box;
}
.user-mark{
  font-size: 24rpx;
  padding-top: 14rpx;
}
.user-mark .ico{
  margin-left:20rpx;
}
.user-mark::after{
  border-color: #fff;
}


.coupon-list{
	height:600rpx;
	position: relative;
}
.coupon-item{
	display: flex;
	align-items: flex-start;
	padding:30rpx;
}
.coupon-item-sub{
	font-size:24rpx;
	color:#999;
}
.coupon-check{
  font-size: 38rpx;
	color:#ccc;
  padding:20rpx;
}
.coupon-item .active{
  color:#00cc99;
}
.coupon-title{
	font-weight: 800;
	font-size: 28rpx;
	margin-bottom: 8rpx;
  align-items: flex-start;
}
.coupon-title-sub{
  font-size: 24rpx;
  color:#999;
}
.cart .ico{
	font-size:35rpx;
	padding:20rpx;
}
.cart .icon-add{
	color:#00cc99;
}