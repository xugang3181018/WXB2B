.tab-bar {
  display: flex;
  align-items: center;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-bar>view {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-bar>view.active {
  color: #00cc99;
}

.tab-bar .ico {
  font-size: 30rpx;
}

.list-title {
  padding: 30rpx 30rpx 0;
  font-size: 24rpx;
  color: #888;
}

.list-inner-title {
  font-size: 30rpx;
  color: #444;
}

.list-inner-title text {
  font-size: 24rpx;
}

.no-more {
  font-size: 23rpx;
  color: #999;
  text-align: center;
  margin: 30rpx 0;
}

.promo-title {
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
}

.promo-name {
  width: 45%;
  height: 90rpx;
  text-align: center;
}

.promo-name.active {
  color: #00cc99;
  border-bottom: 4rpx solid #00cc99;
}


.commodity {
  display: flex;
  padding: 24rpx;
  background: #fff;
  border-radius: 26rpx;
  margin: 10px 8px;

}

.commodity-img {
  width: 150rpx;
  height: 150rpx;
}

.commodity-img>image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;

}

.commodity-msg {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;

}

.commodity-msg .name {
  flex: 1;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  font-weight: 400;
  word-break: break-all;

}

.commodity-msg .buttonStyle {
  display: flex;
  font-size: 28rpx;
  /* justify-content: space-between; */
  align-items: flex-end;

}

.catetag {
  font-size: 20rpx;
  text-align: center;
  border-radius: 6rpx;
  background: #f33;
  color: #fff;
  padding: 3rpx 10rpx;
  margin-left: 30rpx;
}

.expect-Price{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  align-items: center;
  color: #f33;
}

.commodity-share{
    padding: 10rpx 18rpx;
    color: #fff;
    line-height: 24rpx;
    background: #00cc99;
    font-size: 24rpx;
    border-radius: 5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}



