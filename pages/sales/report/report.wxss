  line-height: 1.5;
  font-size: 24rpx;
  color: #333;
  background-color: #f6f5fb;
  padding: 20rpx 30rpx;
}

.long-item-title {
  color: #888;
  font-size: 24rpx;
}

.long-item-cont {
  padding-top: 10rpx;
  color: #444;
  font-weight: 800;
  font-size: 30rpx;
}

.long-item {
  padding-left: 10rpx;
}