page {
  background: #fff;
}
.employeeDetail {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(33, 30, 30, 0.2);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.employeeDetail > view {
  width: 550rpx;
}
.employeeDetail > .title {
  background: #5177BE;
  height: 350rpx;
  border-radius: 8rpx 8rpx 0 0;
  position: relative;
}
.employeeDetail > .title > image {
  width: 125rpx;
  height: 116rpx;
  top: 44rpx;
  left: 210rpx;
  position: absolute;
}
.employeeDetail > .title > text {
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 33rpx;
  top: 233rpx;
  left: 0;
  position: absolute;
}
.employeeDetail > .title > text:first-of-type {
  font-size: 40rpx;
  line-height: 56rpx;
  top: 169rpx;
  left: 0;
  position: absolute;
}
.employeeDetail > .title view {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 81rpx;
  float: left;
  width: 550rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
}
.employeeDetail > .title view image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 25rpx;
}
.employeeDetail > .title view text {
  color: #fff;
}
.employeeDetail > .info {
  background: #fff;
  border-radius: 0 0 8rpx 8rpx;
  width: 490rpx;
  padding: 20rpx 30rpx 24rpx;
}
.employeeDetail > .info view {
  height: 70rpx;
  border-bottom: 1rpx solid #E5E5E5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.employeeDetail > .info view:last-of-type {
  border: 0;
}
.employeeDetail > .info view text {
  font-size: 24rpx;
}
.employeeDetail > .info view text:first-of-type {
  color: #A6A6A6;
}
.employeeList .employeeList {
  width: 100%;
  background: #fff;
  position: relative;
}
.employeeList .employeeList > view {
  margin-left: 30.5rpx;
  border-bottom: 1rpx solid #E5E5E5;
  height: 139.5rpx;
  position: relative;
}
.employeeList .employeeList > view .employeeAvatar {
  width: 80rpx;
  height: 80rpx;
  top: 35rpx;
  left: 0;
  position: absolute;
}
.employeeList .employeeList > view .employeeName {
  top: 33rpx;
  left: 104rpx;
  position: absolute;
  font-size: 32rpx;
  color: #444;
}
.employeeList .employeeList > view .type {
  top: 85rpx;
  left: 104rpx;
  position: absolute;
  font-size: 24rpx;
  color: #999999;
}
.employeeList .employeeList > view image:last-of-type {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 56.5rpx;
  right: 15rpx;
}