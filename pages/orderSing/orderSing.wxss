@import "../../iconfont.wxss";
.o-bar {
    display: flex;
    background: #fff;
    
    z-index:2;
}
.bar-touch{
    background:#eee;
}
.o-bar .ico{
    text-align:center;
    color:#555;
    font-size:32rpx;
    flex-basis:90rpx;
}

.o-bar.fixed {
    left: 0;
    right: 0;
    top: 90rpx;
    position: fixed;
    z-index:99;
    box-shadow:0 2px 12rpx rgba(90, 90, 90, 0.1)
}

.font-icon{
  font-size:70rpx;
}

.ico-img{
    width:70rpx;
    height:70rpx;
}
.o-list {
    background: #fff;
}

.o-line {
    color: #999;
    width: 433rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.o-type text {
    font-size: 22rpx;
    display: block;
}

.o-no {
    font-size: 24rpx;
    width: 100%;
    color: #444;
}

.o-price {
    width: 150rpx;
    font-size: 24rpx;
    text-align: right;
}

.o-btns {
    color: tomato;
    opacity: 0.5;
}

.o-title {
    font-size: 28rpx;
    margin-bottom: 8rpx;
}

.o-amt {
    font-size:30rpx;
    color: #ff6655;
    margin-bottom: 14rpx;
    font-weight: 800;
}

.o-date {
    color: #444;
    margin-bottom: 10rpx;
    font-size: 26rpx;
}

.o-tag {
    color: #666;
}


.summary-scroll{
    position:absolute;
    left:0;
    right:0;
    top:90rpx;
    bottom:0;
}
.scroll-order {
    position: absolute;
    left: 0;
    right: 0;
    top:200rpx;
    bottom:0;
    background: #fff;
}
.ico.money{
    color:#00cc99;
}



.o-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 20rpx 30rpx;
    position: relative;
    color: #888;
    transition:.3s;
}
.o-item-touch{
    background:#f2f2f2;
}
.o-names {
    font-size: 22rpx;
    margin-top: 4rpx;
}

.o-names.dis {
    color: #ccc;
}

.o-item:after {
    content: '';
    display: block;
    height: 1px;
    left: -50%;
    right: -50%;
    bottom: 0;
    position: absolute;
    border-bottom: 1px solid #eee;
    transform: scale(0.5);
}

.o-head {
    background: #00cc99;
    color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
}

.o-head text {
    display: block;
    font-size: 30rpx;
}

.o-head>picker {
    width: 33.33333333%;
    padding: 20rpx 15rpx;
}

.o-bar>picker {
    width: 50%;
    text-align: center;
    font-size: 24rpx;
    color: #444;
    display: flex;
    align-items: center;
    justify-content: center;
}

.o-bar>picker view {
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 90rpx;
}

.o-bar>view {
    line-height: 90rpx;
    width: 30%;
    font-size: 25rpx;
    text-align: left;
    font-weight: 800;
}

.o-bar>view:first-child {
    width: 40%;
}

.o-bar>picker view{
    width:100%;
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
}
.o-bar>picker view::after {
    content: '';
    display: block;
    width: 10rpx;
    height: 10rpx;
    border: 2px solid #ddd;
    border-top: none;
    border-right: none;
    transform: rotate(-45deg);
    margin-left: 30rpx;
   
}

.so-bar {
    padding: 0 40rpx;
    box-shadow: 0 4rpx 14px rgba(0, 0, 0, 0.1);
}

.o-type {
    font-size: 80rpx;
    width: 130rpx;
    height: 130rpx;
    margin-right: 20rpx;
    text-align: center;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.o-type .ico {
    color: #fff;
    font-size:70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 4rpx;
}

.o-type .ico:before {
    margin-top: -1px;
}

.m-list {
    background: #fff;
    padding: 0 55rpx;
}

.m-list>view, .m-list>navigator {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    padding: 36rpx 0;
    color: #444;
    position: relative;
}

.m-list>view text, .m-list>navigator text {
    color: #888;
}

.m-list>view::before, .m-list>navigator::before {
    content: '';
    position: absolute;
    display: block;
    border-bottom: 1px solid #ddd;
    bottom: 0;
    height: 2px;
    left: -50%;
    right: -50%;
    background-origin: content-box;
    transform: scale(0.5);
    flex-grow: 1;
}

.m-list .ico {
    flex-basis: 46rpx;
    width: 50rpx;
    font-size: 46rpx;
    margin-right: 20rpx;
}

.m-name {
    flex-grow: 2;
}

.m-list>view:after, .m-list>navigator::after {
    content: '';
    display: block;
    width: 12rpx;
    height: 12rpx;
    border: 2px solid #eee;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
}

.m-list>view:last-child::after {
    border-bottom: none;
}

.m-list .exit:before {
    border: none;
}

.o-type .alipay{
    color:#20A1E6;
}
.o-type .weixin{
    color:#44B549;
}
.o-type .vip{
    color:#FF7A3E;
    
}

