/* pages/retail/stock/stockOrderInfor/stockOrderInfor.wxss */
@import "../../../../iconfont.wxss";

page {
  background: #fff;
  color: #999;
  font-size: 32rpx;
}

.lnventory-detail{
  padding-bottom:30rpx;
}

.lnventory-detail-box{
   padding: 20rpx 40rpx 0;
}

.color1 {
  color: #333;
}

.goods-content-border {
  border-bottom: 1px solid #ebebeb;
}

.lnventory-detail-content {
  display: flex;
  margin-bottom:16rpx;
  background:#fff;
}

.lnventory-detail-content-right {
  flex: 1;
  text-align: right;
  /* padding-right:30rpx; */
}

.delete-goods {
  width: 100rpx;
  text-align: right;
  font-size: 30rpx;
}

.contentInterval{
  padding-bottom:20rpx;
}

.lnventory-detail-list {
  margin: 30rpx 0;
  height: 156rpx;
  display: flex;
}

.goods-list-content {
  flex: 1;
  line-height: 40rpx;
  font-size: 26rpx;
}

.goods-list-img {
  width: 156rpx;
  height: 100%;
  margin-right: 30rpx;
  border: 1px solid #ebebeb;
}

.goods-list-content-title {
  font-size:28rpx;
  display: flex;
  align-items: center;
}

.goods-list-content-title .title {
  flex: 1;
  width:440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-list-content-title .clear{
  font-size:40rpx;
  color:#999;
  /* margin-right:12rpx; */
}

.practical-number {
  display: flex;
}

.compare-number {
  flex: 1;
  text-align: right;
  color: #00BFA5;
}

.check-lnventory{
  width:100%;
  box-sizing: border-box;
  height:88rpx;
  position:fixed;
  left:0;
  bottom:138rpx;
  background:#f0f0f0;
  display: flex;
  align-items: center;
  color:#00BFA5;
  padding:0 40rpx;
}

.loction{
  bottom:190rpx;
}

.check-lnventory>view{
  flex:1;
}

.check-lnventory>view:nth-child(2){
  text-align: right;
}

.cpm{
  width:100vw;
  height:100vh;
  background:rgba(0,0,0,0.4);
  position: fixed;
  top:0;
  z-index:100;
}

.cpm .option{
  width:100%;
  height:328rpx;
  background:#fff;
  position: absolute;
  bottom:0;
}

.cpm .option .btn{
  height:108rpx;
  text-align: center;
  line-height:108rpx;
  border-bottom:1rpx solid #dddddd;
  color:#333;
}

.show-number{
  text-align: right;
}

.picker-value{
  color:#333;
}

.picker-text{
  position: relative;
}

.picker-text picker::after {
  content: '';
  display: inline-block;
  width: 13rpx;
  height: 13rpx;
  border: 2px solid #ccc;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
  position: absolute;
  top:15rpx;
  right:0;
}

.prompt-box{
  width:100vw;
  height:100vh;
  background:rgba(0,0,0,0.4);
  position: fixed;
  top:0;
  z-index: 1000;
}

.prompt-content-box{
  width:70vw;
  height:30vh;
  background:#fff;
  border-radius: 10rpx;
  position: absolute;
  /* padding:0 30rpx; */
  top:0;
  bottom:0;
  right:0;
  left:0;
  margin: auto;
}

checkbox-group{
  display: flex;
  padding-top:70rpx;
  padding-bottom:40rpx;
}

.options-name{
  font-size:26rpx;
  font-weight:600;
  margin-top:80rpx;
  margin-bottom:70rpx;
   color:#333;
}

.btn-box{
  width:70vw;
  display: flex;
  font-size:40rpx;
  position:absolute;
  bottom:0;
}
.prompt-btn{
  flex:1;
  height:108rpx;
  border-top:1px solid #eee;
  text-align:center;
  line-height:108rpx;
}
.deselect{
  color:#333;
  border-right:1px solid #eee;
}

.affirm{
  color: #00BFA5;
}








/* 吸顶样式 */
.column{
  height:100rpx;
}

.column.fixed {
  width:92%;
  position: fixed;
  top:0;
  background: #fff;
  z-index:1;
 }

 /* 复选框样式 */
 checkbox {
  width:40rpx;
  height:32rpx;
  margin-right:6rpx;
}

 checkbox .wx-checkbox-input {
  width:28rpx;
  height:28rpx;
  margin:0 10rpx;
}


.empty-img-box {
  height: 650rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #c3c3c9;
}

.empty-img {
  width: 274rpx;
  height: 274rpx;
  margin-bottom: 60rpx;
}

.button1{
  border-radius: 5rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 30rpx 0;
  padding: 0 0;
  height: 90rpx;
  line-height: 92rpx;
}

.disabledStyle{
  border-color:#ccc;
}

.page-bar-inner .button1{
  width:30%;
}

button::after{ border: none; }


.button{
  height:90rpx;
  line-height:90rpx;
}

.page-bar{
  padding:20rpx 0;
  background:#ffffff;
} 

.iconfont{
  font-size:30rpx;
}