
.door-arr{
  position: absolute;
  left:130rpx;
  right:130rpx;
  top:110rpx;
}

.page-container{
  flex:1;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.logo{
  width: 428rpx;
  height: 200rpx;
  display: block;
  margin:20% 0;
  transform: scale(0.8);
}
.page-init{
  flex:1;
}

@keyframes moves{
  from{
    transform: translateX(0);
  }
  to{
    transform: translateX(50%);
  }
}
@keyframes moves-es{
  from{
    transform: translateX(50%);
  }
  to{
    transform: translateX(0);
  }
}
.door-arr{
  margin-left: -16rpx;
}
.door-arr .left{
  animation: moves-es 1s ease-in infinite !important;
}
.door-arr .right{
  animation: moves 1s ease-in infinite !important;
}

.mall-bar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height:100rpx;
  position: relative;
  z-index: 4;
}

.mall-bar>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ff3939;
  font-size: 21rpx;
  width: 33.3333%;
}

.mall-bar>view::before{
  font-size: 42rpx;
  margin-bottom: 8rpx;
}

.mall-bar>view.mall-scan{
  background: #ff3939;
  color: #fff;
  border-radius: 90px;
  height: 110rpx;
  margin-top:-40rpx;
  box-shadow: 0 5px 18px rgba(100, 100, 100, .2);
}

.mall-bar>view.mall-scan::before{
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 52rpx;
}
.button-group{
  display: flex;
  align-items: center;
  justify-content: center;
}
.button-phone{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top:0;
  background: transparent;
  margin:0;
  padding:0;
}

.tip{
  margin: 20rpx;
  background:#FBFBFB;
  border-radius: 20rpx;
  padding: 20rpx 10rpx;

}
.tip-h1{
  font-size: 28rpx;
  text-align: center;
}
.tip-step{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.tip-item{
  width: 33%;
}
.tip-img{
  width: 100%;
  margin:15rpx 0;
}
.tip-title{
  font-size:22rpx;
  color: #999;
  text-align: center;
  position: relative;
  padding-top: 20rpx;
  margin-bottom: 10rpx;
}
.tip-title::after{
  position: absolute;
  top:-4rpx;
  border: 1px solid #ff3939;
  border-radius: 210px;
  background: #fff;
  content: '';
  width: 8rpx;
  height: 8rpx;
  left: 50%;
  top:0;
  margin-left: -4rpx;
}
.tip-sub{
  font-size: 24rpx;
  text-align: center;
  margin:0 38rpx;
}

.mall-info{
  margin:0 0 20rpx;
  background: #fff;
  border-radius:10rpx;
  padding:30rpx ;
  margin:30rpx;
}
.mall-info-img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 100px;
  overflow: hidden;
  margin-right:20rpx;
 
}
.mall-info-name{
  font-size: 24rpx;
  color:#999;
  margin-bottom: 10rpx;
}
.mall-info-img image{
  width:90rpx;
  height: 90rpx;
}

.mall-info-shop{
  font-size:28rpx;
}

.order-empty{
  padding:110rpx 0;
}

