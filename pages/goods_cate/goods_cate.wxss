.productSort .conter {
  margin: 98rpx 0 0 180rpx;
  padding: 0 14rpx;
}

.productSort .conter .classify{
  display: inline-block;
  padding:8rpx 16rpx;
  background:#F3F3F3;
  font-size:20rpx;
  border-radius: 36rpx;
  color:#999;
  margin-right:20rpx;
  margin-bottom:24rpx;
}

.productSort .conter .pich-color{
  background:#B19361;
  color:#fff;
}

.productSort .conter .goods-content {
  min-height: 208rpx;
  display: flex;
}

.productSort .conter .goods-content .img-box {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx 0 20rpx 20rpx;
  /* border: 1rpx solid #f2f2f2; */
}

.productSort .conter .goods-content .img-box image {
  width: 100%;
  height: 100%;
}

.productSort .conter .goods-content .content-box {
  width:350rpx;
  padding: 20rpx 0 20rpx 26rpx;
  font-size: 24rpx;
  border-bottom:1px solid #EEEEEE;
}

.productSort .conter .goods-content .content-box .goods-name {
  color: #333;
  font-weight: bold;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}

.productSort .conter .goods-content .content-box .upplierName {
  font-size: 20rpx;
  color: #999999;
  margin-top: 10rpx;
  margin-bottom: 18rpx;
}

.productSort .conter .goods-content .content-box .info text {
  display: inline-block;
  padding: 2rpx 4rpx;
  font-size: 18rpx;
  border: 1rpx solid #E2D6C4;
  border-radius: 4rpx;
  color: #B19361;
  margin-right: 10rpx;
  font-weight: bold;
}

.productSort .conter .goods-content .content-box .price {
  margin-top: 8rpx;
}

.productSort .conter .goods-content .content-box .price .number {
  font-size: 14px;
  color: #EB5533;
  font-weight: bold;
}

.productSort .conter .goods-content .content-box .price .unit{
  font-size: 8px;
color: #999999;
}

.productSort .conter .goods-content .content-box .price .btn{
  float:right;
}

.productSort .conter .listw {
  padding-top: 20rpx;
  vertical-align: top;
}

.productSort .conter .listw .title {
  height: 90rpx;
}

.productSort .conter .listw .title .line {
  width: 100rpx;
  height: 2rpx;
  background-color: #999;
}

.productSort .conter .listw .title .name {
  font-size: 28rpx;
  color: #333;
  margin: 0 30rpx;
  font-weight: bold;
}

.productSort .conter .list {
  flex-wrap: wrap;
}

.productSort .conter .list .item {
  width: 260rpx;
  margin-top: 26rpx;
  border-radius: 10rpx;
  border: 2rpx solid #f5f5f5;
}

.productSort .conter .list .item:nth-child(2n-1) {
  margin-right: 14rpx;
}

.productSort .conter .list .item .picture {
  width: 260rpx;
  height: 264rpx;
  border-radius: 10rpx 10rpx 0 0;
  margin-bottom: 20rpx;
}

.productSort .conter .list .item .picture image {
  width: 100%;
  height: 100%;
}

.productSort .conter .list .item .name {
  font-size: 24rpx;
  color: #000;
  width: 220rpx;
  height: 64rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.productSort .conter .list .item .spec {
  margin-bottom: 6rpx;
}

.productSort .conter .list .item .spec .money {
  font-size: 28rpx;
  color: red;
}

.productSort .conter .list .item .spec .goodsUnit {
  font-size: 20rpx;
}

.productSort .conter .list .item .addCart {
  font-size: 20rpx;
  padding: 6rpx 10rpx;
  color: #000;
  border: 4rpx solid #fc4141;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}


.supplier-name {
  font-size: 22rpx;
  margin-bottom: 10rpx;
}