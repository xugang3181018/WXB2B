.m3 {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.hidden {
  display: none;
}

.p3 {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.mt34 {
  margin-top: 34rpx;
}

.flx-btw {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flx {
  display: flex;
  align-items: center;
}

.sort-nav {
  height: 110rpx;
  background-color: #fff;
}

.add-sort-nav, .handle-sort-nav{
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 30rpx;
  border-left: 10rpx solid #00cc99;
  font-size: 30rpx;
  padding-right: 30rpx;
}

.icons-new-newitem::before {
  font-size: 30rpx;
  color: #00cc99;
}

.add-sort-text {
  padding-left: 18rpx;
}

.input-sort-nav {
  color: #555;
}

.sort-list{
  margin-top: 20rpx;
  background-color: #fff;
}

.sort-list-title, .sort-cont {
  height: 112rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #888;
}

.icons-new-editor{
  padding-right: 20rpx;
}

.icons-new-editor::before {
  font-size: 30rpx;
}

.sort-list-remark {
  font-size: 24rpx;
}

.sort-cont-name {
  color: #333;
}

.sort-cont-icon .icon {
  padding: 20rpx 0 20rpx 30rpx;
}