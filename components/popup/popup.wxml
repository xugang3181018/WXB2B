<!--components/popup/popup.wxml-->
<view class="wx-popup" hidden="{{flag}}">
  <view class='popup-container'>
    <view class="wx-popup-title">{{title}}</view>
    <form bindsubmit="pswInput" bindreset="formReset">
    <view class="wx-popup-con">
      <view class="password" >请输入密码：<input name="password1" type="password" placeholder="请输入密码" value='{{pswData.password1}}'/></view>
      <view class="password" >请再次输入：<input name="password2"  type="password" placeholder="请再次输入" value='{{pswData.password2}}'/></view>
    </view>
    <view class="wx-popup-btn">
      <button class="btn-no" formType="reset">{{btn_no}}</button>
      <button class="btn-ok" formType="submit">{{btn_ok}}</button>
    </view>
  </form>
  </view>
</view>
